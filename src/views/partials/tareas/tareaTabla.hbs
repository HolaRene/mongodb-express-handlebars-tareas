{{! Tabla donde estan las tareas }}

{{#if matrizTareas}}
  <table class='table table-bordered table-hover table-dark'>
    <thead>
      <tr>
        <th>N.</th>
        <th>Titulo</th>
        <th>Descripción</th>
        <th>Operación</th>
      </tr>
    </thead>
    <tbody>
      {{#each matrizTareas}}
        <tr>
          <td>{{@index}}</td>
          <td>{{titulo}}</td>
          <td>{{descripcion}}</td>
          <td>
            {{#if estaEcho}}
              <a class='btn btn-dark' href='/tarea/{{_id}}/hecho'>No está hecha</a>
            {{else}}
              <a class='btn btn-success' href='/tarea/{{_id}}/hecho'>Hecha</a>
            {{/if}}
            <a
              href='/tarea/{{_id}}/eliminar'
              class='btn btn-danger'
            >Eliminar</a>
            <a href='/tarea/{{_id}}/editar' class='btn btn-info'>Editar</a>
          </td>
        </tr>

      {{/each}}
    </tbody>
  </table>
{{else}}

  <div class='h-100 d-flex align-items-center justify-content center'>
    <div class='text-center text-white'>
      <h1>No hay tareas para mostrar</h1>
      <img src='/img/donjoe.png' class='w-75' alt='hola' />
    </div>
  </div>

{{/if}}